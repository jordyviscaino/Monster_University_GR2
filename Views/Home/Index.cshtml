@model Monster_University_GR2.CapaEntidad.UsuarioSesion

@{
    Layout = null; // Por ahora sin layout maestro
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Dashboard - @Model.Nombre</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-dark text-white">

    <div class="container mt-5">
        <div class="card bg-secondary text-white shadow-lg">
            <div class="card-header bg-primary">
                <h3>Dashboard Principal</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <h1 class="display-4">Bienvenido, @Model.Nombre @Model.Apellido</h1>
                        <p class="lead">Has iniciado sesión correctamente en la nueva arquitectura.</p>
                    </div>
                    <div class="col-md-4 text-center">
                        <div class="p-3 border rounded bg-dark">
                            <h5>Tu Rol Actual</h5>
                            <h2 class="text-warning">@Model.RolCodigo</h2>
                        </div>
                    </div>
                </div>

                <hr />

                <h5>Tus Datos de Sesión:</h5>
                <ul>
                    <li><strong>Email:</strong> @Model.Email</li>
                    <li><strong>Estado:</strong> @Model.Estado</li>
                    <li><strong>Departamento:</strong> @(Model.DepartamentoCodigo ?? "Ninguno")</li>
                </ul>

                <br />
                <a href="@Url.Action("Logout", "Access")" class="btn btn-danger btn-lg">Cerrar Sesión</a>
            </div>
        </div>
    </div>

</body>
</html>