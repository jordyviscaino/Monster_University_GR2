@model Monster_University_GR2.CapaEntidad.UsuarioSesion

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Dashboard - @Model.Nombre</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Luckiest+Guy&family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            background-color:aqua;
            color: #FDFEFE;
            font-family: 'Roboto', sans-serif;
        }

        h1, h2, h3, h5 {
            font-family: 'Luckiest Guy', cursive;
        }

        .card-header {
            background-color: #2E86C1;
        }

        .overlay-dark {
            background-color: rgba(0,0,0,0.6);
            border-radius: 0.5rem;
            padding: 2rem;
        }

        .btn-danger {
            background-color: #27AE60;
            border: none;
        }

            .btn-danger:hover {
                background-color: #1e8449;
            }

        .highlight-role {
            color: #F1C40F;
            font-size: 2rem;
            text-shadow: 2px 2px 6px rgba(0,0,0,0.8);
        }
    </style>
</head>

<body class="bg-info text-white">

    <div class="container mt-5">
        <div class="card bg-secondary text-white shadow-lg position-relative">

            <!-- Imagen de fondo -->
            <img class="card-img" src="~/images/Monster_Fondo.jpg" alt="Fondo Monster University">

            <!-- Overlay con oscurecimiento -->
            <div class="card-img-overlay d-flex flex-column justify-content-between">

                <div class="overlay-dark">
                    <div class="row">
                        <div class="col-md-8">
                            <h1 class="display-4 text-shadow">Bienvenido, @Model.Nombre @Model.Apellido</h1>
                            <p class="lead text-shadow">Has iniciado sesión en el sistema Monster University</p>
                        </div>
                        <div class="col-md-4 text-center">
                            <div class="p-3 border rounded bg-dark bg-opacity-75">
                                <h5 class="text-shadow">Tu Rol Actual</h5>
                                <h2 class="text-warning text-shadow">@Model.RolCodigo</h2>
                            </div>
                        </div>
                    </div>

                    <hr class="border-light" />

                    <h5 class="text-shadow">Tus Datos de Sesión:</h5>
                    <ul>
                        <li><strong>Email:</strong> @Model.Email</li>
                        <li><strong>Departamento:</strong> @(Model.DepartamentoCodigo ?? "Ninguno")</li>
                    </ul>

                    <div class="text-center mt-4">
                        <a href="@Url.Action("Logout", "Access")" class="btn btn-danger btn-lg shadow">Cerrar Sesión</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
