@{
    Layout = null;
    ViewBag.Title = "Iniciar Sesión";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Monster University</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600&display=swap" rel="stylesheet" />

    <link href="~/css/Login.css" rel="stylesheet" />
</head>
<body>

    <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="login-card">
            <div class="brand_logo_container">
                <img src="~/images/monster_logo.jpg" class="brand_logo" alt="Logo Monster University">
            </div>

            <form asp-controller="Access" asp-action="Login" method="post">

                <h3>Monster University</h3>
                <p class="subtitle">Sistema Académico</p>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger text-center p-2" role="alert">
                        @ViewBag.Error
                    </div>
                }

                <label for="userLogin"><strong class="text-light">Usuario</strong></label>
                <div class="input-group flex-nowrap mb-3">
                    <input required id="userLogin" name="userLogin" type="text"
                           class="form-control" placeholder="Ej. Admin"
                           aria-label="Username" autocomplete="username">
                </div>

                <label for="passLogin"><strong class="text-light">Contraseña</strong></label>
                <div class="input-group flex-nowrap mb-4">
                    <input type="password" id="passLogin" name="passLogin"
                           class="form-control" placeholder="******"
                           autocomplete="current-password" required>
                </div>

                <div class="pt-2 d-grid gap-2">
                    <button type="submit" class="btn btn-info btn-lg text-white">Ingresar</button>
                </div>

                <a asp-controller="Access" asp-action="Register" class="btn btn-outline-light w-100 mt-3" style="border-radius: 25px;">
                    REGISTRARSE
                </a>

                <div class="text-center mt-3">
                    <a asp-controller="Access" asp-action="Recuperar" class="forgot-link text-decoration-none text-light">
                        ¿Olvidaste tu contraseña?
                    </a>
                </div>

            </form>
        </div>
    </div>

</body>
</html>