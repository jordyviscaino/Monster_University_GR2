@model CambiarClaveViewModel

@{
    Layout = null;
    ViewBag.Title = "Cambio de Contraseña Obligatorio";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link href="~/css/Login.css" rel="stylesheet" />
</head>
<body>

    <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
        <div class="login-card" style="padding-top: 20px;">

            <div class="text-center mb-4">
                <h3 class="text-white">Seguridad de la Cuenta</h3>
                <div class="alert alert-warning p-2 small">
                    <i class="fas fa-lock"></i> Por seguridad, debes cambiar tu contraseña temporal ahora.
                </div>
            </div>

            <form asp-controller="Access" asp-action="CambiarClave" method="post">

                <input type="hidden" asp-for="Email" />

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger text-center p-2 small">@ViewBag.Error</div>
                }

                <label class="text-light fw-bold">Nueva Contraseña</label>
                <div class="input-group flex-nowrap mb-3">
                    <span class="input-group-text bg-transparent text-white border-end-0"><i class="fas fa-key"></i></span>
                    <input asp-for="NewPassword" class="form-control border-start-0" placeholder="Mínimo 6 caracteres" />
                </div>
                <span asp-validation-for="NewPassword" class="text-warning small d-block mb-2"></span>

                <label class="text-light fw-bold">Confirmar Contraseña</label>
                <div class="input-group flex-nowrap mb-4">
                    <span class="input-group-text bg-transparent text-white border-end-0"><i class="fas fa-check-circle"></i></span>
                    <input asp-for="ConfirmPassword" class="form-control border-start-0" placeholder="Repite la contraseña" />
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-warning small d-block mb-2"></span>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-success text-white fw-bold">ACTUALIZAR CONTRASEÑA</button>
                </div>

            </form>
        </div>
    </div>

</body>
</html>