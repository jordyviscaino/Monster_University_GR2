@model Monster_University_GR2.Models.RegistroViewModel

@{
    Layout = null;
    ViewData["Title"] = "Registro de Estudiante";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Monster University</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600&display=swap" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />

    <style>
        body {
            background-attachment: fixed;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .card-registro {
            background-color: rgba(0, 180, 150, 0.20);
            border-radius: 12px;
            backdrop-filter: blur(9px);
            border: 2px solid rgba(255,255,255,0.2);
            box-shadow: 0 0 25px rgba(0,0,0,0.5);
            padding: 40px 35px;
            color: #fff;
            width: 800px;
            max-width: 95%;
            margin: 20px auto;
            position: relative;

        .form-control {
            background-color: rgba(255,255,255,0.1) !important;
            border: none !important;
            color: white !important;
        }

            .form-control::placeholder {
                color: rgba(255,255,255,0.6);
            }

        .input-group-text {
            background-color: rgba(255,255,255,0.2) !important;
            border: none !important;
            color: white;
        }

        .text-warning {
            font-size: 0.8rem;
            text-shadow: 1px 1px 2px black;
        }

        .brand_logo_small {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            border: 2px solid white;
            margin-bottom: 15px;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="card-registro">

            <div class="text-center">
                <img src="~/images/monster_logo.jpg" class="brand_logo_small" alt="Logo">
                <h3 class="text-white mb-2">Crear Cuenta</h3>
                <p class="subtitle">Únete a la comunidad de Monster University</p>
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger text-center p-2" style="background: rgba(220, 53, 69, 0.8); border: none; color: white;">
                    <i class="fas fa-exclamation-triangle"></i> @ViewBag.Error
                </div>
            }

            <form asp-controller="Access" asp-action="Register" method="post">

                <div class="row">
                    <div class="col-md-6">

                        <label class="text-light fw-bold small">Cédula</label>
                        <div class="input-group mb-3">
                            <span class="input-group-text"><i class="fas fa-id-card"></i></span>
                            <input asp-for="Cedula" class="form-control" placeholder="1700000000" />
                        </div>
                        <span asp-validation-for="Cedula" class="text-warning d-block mb-2"></span>

                        <label class="text-light fw-bold small">Nombres</label>
                        <div class="input-group mb-3">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                            <input asp-for="Nombres" class="form-control" placeholder="Ej. James P." />
                        </div>
                        <span asp-validation-for="Nombres" class="text-warning d-block mb-2"></span>

                        <label class="text-light fw-bold small">Apellidos</label>
                        <div class="input-group mb-3">
                            <span class="input-group-text"><i class="fas fa-user-tag"></i></span>
                            <input asp-for="Apellidos" class="form-control" placeholder="Ej. Sullivan" />
                        </div>
                        <span asp-validation-for="Apellidos" class="text-warning d-block mb-2"></span>

                    </div>

                    <div class="col-md-6">

                        <label class="text-light fw-bold small">Celular</label>
                        <div class="input-group mb-3">
                            <span class="input-group-text"><i class="fas fa-mobile-alt"></i></span>
                            <input asp-for="TelefonoCelular" class="form-control" placeholder="0999999999" />
                        </div>
                        <span asp-validation-for="TelefonoCelular" class="text-warning d-block mb-2"></span>

                        <label class="text-light fw-bold small">Correo Electrónico</label>
                        <div class="input-group mb-3">
                            <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                            <input asp-for="Email" class="form-control" type="email" placeholder="correo@ejemplo.com" />
                        </div>
                        <span asp-validation-for="Email" class="text-warning d-block mb-2"></span>

                        <div class="row g-2">
                            <div class="col-6">
                                <label class="text-light fw-bold small">Contraseña</label>
                                <div class="input-group mb-3">
                                    <span class="input-group-text px-2"><i class="fas fa-lock"></i></span>
                                    <input asp-for="Password" type="password" class="form-control" placeholder="******" />
                                </div>
                            </div>
                            <div class="col-6">
                                <label class="text-light fw-bold small">Confirmar</label>
                                <div class="input-group mb-3">
                                    <span class="input-group-text px-2"><i class="fas fa-check"></i></span>
                                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="******" />
                                </div>
                            </div>
                        </div>
                        <span asp-validation-for="Password" class="text-warning d-block"></span>
                        <span asp-validation-for="ConfirmPassword" class="text-warning d-block mb-2"></span>

                    </div>
                </div>

                <div class="d-grid gap-2 mt-4">
                    <button type="submit" class="btn btn-info btn-lg text-white fw-bold shadow-sm">
                        <i class="fas fa-user-plus"></i> REGISTRARSE
                    </button>
                </div>

                <div class="text-center mt-4">
                    <a asp-controller="Access" asp-action="Login" class="text-decoration-none text-white">
                        <i class="fas fa-arrow-left"></i> Volver al Inicio de Sesión
                    </a>
                </div>

            </form>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@4.0.0/dist/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>