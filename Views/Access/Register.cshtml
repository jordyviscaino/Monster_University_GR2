@model Monster_University_GR2.CapaEntidad.RegistroViewModel

@{
    Layout = null;
    ViewData["Title"] = "Registro de Estudiante";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

    <!-- CSS local (asegúrate que wwwroot/css/estilos.css exista) -->
    <link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/estilos.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        .glass-card-reg {
            max-width: 700px;
            margin: 40px auto;
        }
    </style>
</head>
<body class="Fondo">
    <div class="container">
        <div class="transparente2 glass-card-reg">
            <h2 class="mb-4">REGISTRO DE USUARIO</h2>

            @using (Html.BeginForm("Register", "Access", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger text-center">@ViewBag.Error</div>
                }

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3 text-start">
                            <label>Cédula de Identidad</label>
                            @Html.TextBoxFor(m => m.Cedula, new { @class = "glass-input form-control", placeholder = "10 dígitos", maxlength = "10" })
                            @Html.ValidationMessageFor(m => m.Cedula, "", new { @class = "text-warning small" })
                        </div>

                        <div class="mb-3 text-start">
                            <label>Nombres</label>
                            @Html.TextBoxFor(m => m.Nombre, new { @class = "glass-input form-control" })
                            @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-warning small" })
                        </div>

                        <div class="mb-3 text-start">
                            <label>Género</label>
                            @Html.DropDownListFor(m => m.SexoCodigo, (IEnumerable<SelectListItem>)ViewBag.ListaSexos, "Seleccione...", new { @class = "form-select" })
                            @Html.ValidationMessageFor(m => m.SexoCodigo, "", new { @class = "text-warning small" })
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3 text-start">
                            <label>Correo Electrónico</label>
                            @Html.TextBoxFor(m => m.Email, new { @class = "glass-input form-control", type = "email" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-warning small" })
                        </div>

                        <div class="mb-3 text-start">
                            <label>Apellidos</label>
                            @Html.TextBoxFor(m => m.Apellido, new { @class = "glass-input form-control" })
                            @Html.ValidationMessageFor(m => m.Apellido, "", new { @class = "text-warning small" })
                        </div>

                        <div class="mb-3 text-start">
                            <label>Estado Civil</label>
                            @Html.DropDownListFor(m => m.EstadoCivilCodigo, (IEnumerable<SelectListItem>)ViewBag.ListaEstadoCivil, "Seleccione...", new { @class = "form-select" })
                            @Html.ValidationMessageFor(m => m.EstadoCivilCodigo, "", new { @class = "text-warning small" })
                        </div>
                    </div>
                </div>

                <hr style="border-color: rgba(255,255,255,0.3);" />

                <div class="row">
                    <div class="col-md-6 mb-3 text-start">
                        <label>Contraseña</label>
                        @Html.PasswordFor(m => m.Password, new { @class = "glass-input form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-warning small" })
                    </div>
                    <div class="col-md-6 mb-3 text-start">
                        <label>Confirmar Contraseña</label>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "glass-input form-control" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-warning small" })
                    </div>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-info">CREAR CUENTA</button>
                </div>

                <div class="mt-3">
                    <a href="@Url.Action("Login", "Access")" class="forgot-link">Volver al Inicio de Sesión</a>
                </div>
            }
        </div>
    </div>

    <!-- JS de Bootstrap (bundle incluye Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- JS local -->
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
