@model List<Monster_University_GR2.CapaEntidad.UsuarioResumenViewModel>

@{
    ViewBag.Title = "Gestión de Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet">

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="fas fa-users"></i> Lista de Usuarios</h5>
        <a href="@Url.Action("Crear", "Usuarios")" class="btn btn-success btn-sm">
            <i class="fas fa-plus"></i> Nuevo Usuario
        </a>
    </div>
    <div class="card-body">

        <table id="tablaUsuarios" class="table table-striped table-hover" style="width:100%">
            <thead>
                <tr>
                    <th>Cédula</th>
                    <th>Nombres y Apellidos</th>
                    <th>Usuario / Correo</th>
                    <th>Fecha Registro</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Cedula</td>
                        <td>@item.NombreCompleto</td>
                        <td>@item.Email</td>
                        <td>@item.FechaRegistro.ToShortDateString()</td>
                        <td>
                            @if (item.Estado == "A")
                            {
                                <span class="badge bg-success">Activo</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactivo</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">

                                <a href="@Url.Action("Editar", "Usuarios", new { id = item.Cedula })" class="btn btn-primary btn-sm" title="Editar">
                                    <i class="fas fa-pen"></i>
                                </a>

                                <a href="@Url.Action("Detalles", "Usuarios", new { id = item.Cedula })" class="btn btn-info btn-sm text-white" title="Ver completo">
                                    <i class="fas fa-eye"></i>
                                </a>

                                <button onclick="confirmarEliminar('@item.Cedula')" class="btn btn-danger btn-sm" title="Dar de baja">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.0.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <script>
        $(document).ready(function () {
            // Inicializar DataTables en español
            $('#tablaUsuarios').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json"
                },
                "pageLength": 10,
                "responsive": true
            });
        });

        function confirmarEliminar(id) {
            if (confirm("¿Está seguro de dar de baja a este usuario?")) {
                // Redirigir a la acción de eliminar
                window.location.href = '@Url.Action("Eliminar", "Usuarios")/' + id;
            }
        }
    </script>
}