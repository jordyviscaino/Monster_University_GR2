@model List<Monster_University_GR2.Models.UsuarioResumenViewModel>

@{
    ViewBag.Title = "Gestión de Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet">

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="fas fa-users"></i> Lista de Usuarios</h5>
        <a href="@Url.Action("Crear", "Usuarios")" class="btn btn-success btn-sm fw-bold">
            <i class="fas fa-plus"></i> Nuevo Usuario
        </a>
    </div>
    <div class="card-body">

        @* Notificaciones de TempData (Backend) *@
        @if (TempData["Exito"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Exito"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <table id="tablaUsuarios" class="table table-striped table-hover align-middle" style="width:100%">
            <thead class="table-secondary">
                <tr>
                    <th class="text-center" style="width: 50px;">Foto</th>
                    <th>Cédula</th>
                    <th>Nombres y Apellidos</th>
                    <th>Correo</th>
                    <th>Fecha</th>
                    <th>Estado</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center align-middle">
                            <img src="~/images/usuarios/@(item.Cedula).jpeg?v=@DateTime.Now.Ticks"
                                 onerror="this.src='https://cdn-icons-png.flaticon.com/512/3135/3135715.png'"
                                 class="rounded-circle border shadow-sm"
                                 style="width: 45px; height: 45px; object-fit: cover;"
                                 alt="Avatar" />
                        </td>

                        <td class="fw-bold align-middle">@item.Cedula</td>

                        <td>@item.NombresCompletos</td>

                        <td>@item.Email</td>

                        <td>@item.FechaRegistro</td>

                        <td>
                            @if (item.Estado == "ACTIVO" || item.Estado == "A")
                            {
                                <span class="badge bg-success">Activo</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactivo</span>
                            }
                        </td>

                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <a href="@Url.Action("Editar", "Usuarios", new { id = item.Cedula })"
                                   class="btn btn-outline-primary btn-sm" title="Editar">
                                    <i class="fas fa-pen"></i>
                                </a>
                                <a href="@Url.Action("Detalles", "Usuarios", new { id = item.Cedula })"
                                   class="btn btn-info btn-sm text-white" title="Ver Detalles">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="@Url.Action("Detalles", "Usuarios", new { id = item.Cedula })"
                                   class="btn btn-outline-info btn-sm" title="Ver detalle">
                                    <i class="fas fa-eye"></i>
                                </a>

                                <button onclick="confirmarEliminar('@item.Cedula')"
                                        class="btn btn-outline-danger btn-sm" title="Dar de baja">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.0.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        $(document).ready(function () {
            // Inicialización de DataTables
            $('#tablaUsuarios').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json"
                },
                "pageLength": 10,
                "responsive": true,
                "order": [[1, "asc"]] // Ordenar por Cédula (columna 1) por defecto
            });
        });

        // Función de Eliminar con Confirmación
        function confirmarEliminar(id) {
            Swal.fire({
                title: '¿Estás seguro?',
                text: "Esta acción dará de baja al usuario y afectará sus accesos.",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Sí, eliminar',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Redirigir al controlador
                    window.location.href = '@Url.Action("Eliminar", "Usuarios")?id=' + id;
                }
            })
        }

        // Mostrar SweetAlert si hay mensaje de éxito desde el Controlador
        var mensajeExito = '@TempData["Exito"]'; // Usamos "Exito" para coincidir con el Controller

        if (mensajeExito && mensajeExito !== '') {
            Swal.fire({
                position: 'top-end',
                icon: 'success',
                title: '¡Operación Exitosa!',
                text: mensajeExito,
                showConfirmButton: false,
                timer: 2500,
                toast: true,
                background: '#e6fffa'
            });
        }
    </script>
}