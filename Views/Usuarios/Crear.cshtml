@model Monster_University_GR2.CapaEntidad.UsuarioCrearViewModel

@{
    ViewBag.Title = "Nuevo Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Usamos el Layout Maestro
}

<div class="card shadow-sm border-0">
    <div class="card-header bg-dark text-white">
        <h5 class="mb-0"><i class="fas fa-user-plus"></i> Registrar Nuevo Usuario</h5>
    </div>
    <div class="card-body">

        @if (TempData["Exito"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle"></i> @TempData["Exito"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-triangle"></i> @ViewBag.Error
            </div>
        }

        <form asp-action="Crear" method="post" class="row g-3">

            <div class="col-12"><h6 class="text-primary border-bottom pb-2">Datos de Identificación</h6></div>

            <div class="col-md-4">
                <label class="form-label">Cédula</label>
                <input asp-for="Cedula" class="form-control" placeholder="10 dígitos" />
                <span asp-validation-for="Cedula" class="text-danger small"></span>
            </div>
            <div class="col-md-4">
                <label class="form-label">Nombres</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger small"></span>
            </div>
            <div class="col-md-4">
                <label class="form-label">Apellidos</label>
                <input asp-for="Apellido" class="form-control" />
                <span asp-validation-for="Apellido" class="text-danger small"></span>
            </div>

            <div class="col-12 mt-4"><h6 class="text-primary border-bottom pb-2">Información Personal</h6></div>

            <div class="col-md-3">
                <label class="form-label">Fecha Nacimiento</label>
                <input asp-for="FechaNacimiento" class="form-control" type="date" />
                <span asp-validation-for="FechaNacimiento" class="text-danger small"></span>
            </div>
            <div class="col-md-3">
                <label class="form-label">Género</label>
                <select asp-for="SexoCodigo" class="form-select" asp-items="ViewBag.ListaSexos">
                    <option value="">Seleccione...</option>
                </select>
                <span asp-validation-for="SexoCodigo" class="text-danger small"></span>
            </div>
            <div class="col-md-3">
                <label class="form-label">Estado Civil</label>
                <select asp-for="EstadoCivilCodigo" class="form-select" asp-items="ViewBag.ListaEstadoCivil">
                    <option value="">Seleccione...</option>
                </select>
                <span asp-validation-for="EstadoCivilCodigo" class="text-danger small"></span>
            </div>
            <div class="col-md-3">
                <label class="form-label">Cargas Familiares</label>
                <input asp-for="CargasFamiliares" class="form-control" type="number" min="0" />
                <span asp-validation-for="CargasFamiliares" class="text-danger small"></span>
            </div>

            <div class="col-12 mt-4"><h6 class="text-primary border-bottom pb-2">Contacto</h6></div>

            <div class="col-md-6">
                <label class="form-label">Dirección Domiciliaria</label>
                <input asp-for="Direccion" class="form-control" placeholder="Calle principal, secundaria y número" />
                <span asp-validation-for="Direccion" class="text-danger small"></span>
            </div>
            <div class="col-md-3">
                <label class="form-label">Celular</label>
                <input asp-for="Celular" class="form-control" placeholder="09..." />
                <span asp-validation-for="Celular" class="text-danger small"></span>
            </div>
            <div class="col-md-3">
                <label class="form-label">Teléfono Fijo</label>
                <input asp-for="TelefonoDomicilio" class="form-control" placeholder="02..." />
                <span asp-validation-for="TelefonoDomicilio" class="text-danger small"></span>
            </div>

            <div class="col-12 mt-4"><h6 class="text-primary border-bottom pb-2">Credenciales de Acceso</h6></div>

            <div class="col-md-6">
                <label class="form-label">Correo Electrónico (Usuario)</label>
                <input asp-for="Email" class="form-control" placeholder="correo@ejemplo.com" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>
            <div class="col-md-6">
                <label class="form-label">Contraseña Temporal</label>
                <input asp-for="Password" class="form-control" type="password" value="Monster2025" />
                <div class="form-text">El usuario deberá cambiar esta contraseña al ingresar.</div>
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="col-12 mt-4 text-end">
                <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Guardar Usuario</button>
            </div>

        </form>
    </div>
</div>