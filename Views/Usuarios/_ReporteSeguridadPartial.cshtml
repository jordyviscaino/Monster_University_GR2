@model List<Monster_University_GR2.CapaEntidad.UsuarioResumenViewModel>

<div id="areaImpresionSeguridad" style="position: relative; color: black; background: white; font-family: 'Times New Roman', Times, serif;">

    <div style="position: absolute; top: 30%; left: 15%; width: 70%; opacity: 0.05; z-index: 0; pointer-events: none;">
        <img src="https://tse3.mm.bing.net/th/id/OIP.GPfihB0zgPh_65RzRJTgUwHaIp?cb=ucfimg2&ucfimg=1&rs=1&pid=ImgDetMain&o=7&rm=3" style="width: 100%;">
    </div>

    <table style="width: 100%; border-bottom: 3px double #000; margin-bottom: 20px; z-index: 1; position: relative;">
        <tr>
            <td style="width: 20%; text-align: center; vertical-align: middle;">
                <img src="https://tse1.mm.bing.net/th/id/OIP.vRk5pbGbb-buYxS8rh47uAAAAA?cb=ucfimg2&ucfimg=1&w=358&h=300&rs=1&pid=ImgDetMain&o=7&rm=3" width="70" height="70" alt="Escudo">
            </td>
            <td style="width: 60%; text-align: center; vertical-align: middle;">
                <h2 style="margin: 0; font-size: 22px; text-transform: uppercase; letter-spacing: 1px;">Monster University</h2>
                <h4 style="margin: 5px 0 0 0; font-size: 14px; font-weight: normal;">Dirección de Tecnología y Seguridad</h4>
                <p style="margin: 0; font-size: 11px; font-style: italic;">Reporte de Auditoría de Usuarios</p>
            </td>
            <td style="width: 20%; text-align: center; vertical-align: middle;">
                <div style="border: 1px solid #000; padding: 5px; font-size: 10px; background: #eee;">
                    <strong>CONFIDENCIAL</strong><br>Uso Interno
                </div>
            </td>
        </tr>
    </table>

    <div style="margin-bottom: 20px; z-index: 1; position: relative;">
        <p style="margin: 0; text-align: right; font-size: 12px;">
            <strong>Fecha de Emisión:</strong> @DateTime.Now.ToString("dd/MM/yyyy HH:mm") <br>
            <strong>Total Registros:</strong> @Model.Count
        </p>
        <h3 style="text-align: center; text-decoration: underline; margin-top: 10px;">LISTADO GENERAL DE USUARIOS</h3>
    </div>

    <table style="width: 100%; border-collapse: collapse; font-size: 11px; z-index: 1; position: relative;">
        <thead>
            <tr style="background-color: #eee;">
                <th style="border: 1px solid #000; padding: 6px; width: 15%;">CÉDULA</th>
                <th style="border: 1px solid #000; padding: 6px; width: 35%;">NOMBRE COMPLETO</th>
                <th style="border: 1px solid #000; padding: 6px; width: 25%;">CORREO / LOGIN</th>
                <th style="border: 1px solid #000; padding: 6px; width: 15%;">FECHA REG.</th>
                <th style="border: 1px solid #000; padding: 6px; width: 10%; text-align: center;">ESTADO</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="border: 1px solid #000; padding: 4px;">@item.Cedula</td>
                    <td style="border: 1px solid #000; padding: 4px; text-transform: uppercase;">@item.NombreCompleto</td>
                    <td style="border: 1px solid #000; padding: 4px;">@item.Email</td>
                    <td style="border: 1px solid #000; padding: 4px;">@item.FechaRegistro.ToShortDateString()</td>
                    <td style="border: 1px solid #000; padding: 4px; text-align: center;">
                        @if (item.Estado == "A")
                        {
                            <span style="font-weight: bold;">ACTIVO</span>
                        }
                        else
                        {
                            <span style="color: red; font-weight: bold;">INACTIVO</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div style="margin-top: 50px; width: 100%; z-index: 1; position: relative; font-size: 11px;">
        <table style="width: 100%;">
            <tr>
                <td style="width: 40%; border-top: 1px solid black; text-align: center;">
                    <br>Jefe de Sistemas
                </td>
                <td style="width: 20%;"></td>
                <td style="width: 40%; border-top: 1px solid black; text-align: center;">
                    <br>Auditoría Interna
                </td>
            </tr>
        </table>
        <p style="text-align: center; margin-top: 20px; color: #777; font-size: 9px;">
            Generado automáticamente por el Sistema Académico VISS - Monster University
        </p>
    </div>

</div>