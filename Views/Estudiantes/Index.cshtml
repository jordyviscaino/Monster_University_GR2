@model List<Monster_University_GR2.CapaEntidad.EstudianteResumenDTO>
@{
    ViewBag.Title = "Administración de Estudiantes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="fas fa-user-graduate"></i> Directorio de Estudiantes</h5>
        <a href="@Url.Action("Crear", "Usuarios")" class="btn btn-light btn-sm text-primary fw-bold">
            <i class="fas fa-plus"></i> Nuevo Estudiante
        </a>
    </div>
    <div class="card-body">
        <table id="tablaEstudiantes" class="table table-striped align-middle">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Datos Personales</th>
                    <th>Estado</th>
                    <th class="text-center">Gestión</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CodigoEstudiante</td>
                        <td>
                            <strong>@item.NombreCompleto</strong><br />
                            <small class="text-muted">@item.Email</small>
                        </td>
                        <td>
                            <span class="badge bg-success">ACTIVO</span>
                        </td>
                        <td class="text-center">
                            <div class="btn-group">
                                <a href="@Url.Action("Editar", "Usuarios", new { id = item.CodigoEstudiante })"
                                   class="btn btn-primary btn-sm" title="Editar Datos Personales">
                                    <i class="fas fa-pen"></i>
                                </a>

                                <button class="btn btn-warning btn-sm text-dark" title="Gestionar Materias/Notas" disabled>
                                    <i class="fas fa-book"></i>
                                </button>

                                <a href="@Url.Action("Eliminar", "Usuarios", new { id = item.CodigoEstudiante })"
                                   class="btn btn-danger btn-sm" onclick="return confirm('¿Dar de baja al estudiante?');">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tablaEstudiantes').DataTable({
                language: { url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/es-ES.json' }
            });
        });
    </script>
}