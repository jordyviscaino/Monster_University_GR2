@using Microsoft.AspNetCore.Http
@using System.Text.Json
@using Monster_University_GR2.CapaEntidad

@{
    // 1. Recuperamos la sesión
    string usuarioJson = Context.Session.GetString("UsuarioSesion");
    UsuarioSesion usuarioActual = null;
    List<string> misPermisos = new List<string>();

    if (!string.IsNullOrEmpty(usuarioJson))
    {
        usuarioActual = JsonSerializer.Deserialize<UsuarioSesion>(usuarioJson);
        // RECUPERAMOS LOS PERMISOS SI EXISTEN
        if (usuarioActual != null && usuarioActual.Permisos != null)
        {
            misPermisos = usuarioActual.Permisos;
        }
    }

    // 2. Variable ROL para lógica visual (Badges) o retrocompatibilidad
    string ROL = usuarioActual?.RolCodigo ?? "INV";

    // 3. FUNCIÓN HELPER PARA VERIFICAR PERMISOS EN EL HTML
    bool Tiene(string codigo)
    {
        return misPermisos.Contains(codigo);
    }
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Monster University</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

    <link rel="stylesheet" href="~/css/estilos.css" />
    <link rel="stylesheet" href="https://printjs-4de6.kxcdn.com/print.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css" />
    <style>
        /* --- ESTILO MONSTER UNIVERSITY --- */
        body {
            /* Imagen de fondo */
            background-image: url('https://th.bing.com/th/id/R.948befe35a671d585323c2694ea8739d?rik=gMvQ0N49NnBuIw&riu=http%3a%2f%2fwww.hdwallpapers.in%2fwalls%2fmonsters_university_2013-wide.jpg&ehk=kj3kpDQLftueE6%2f4%2fzEIHrOE91A2U4ytPw3pTTOTrEY%3d&risl=1&pid=ImgRaw&r=0');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            background-repeat: no-repeat;
            min-height: 100vh;
            padding-bottom: 60px;
        }

        /* Barra de Navegación */
        .navbar-custom {
            background-color: #004aad; /* Azul Monster U */
            border-bottom: 4px solid #ffd800; /* Amarillo/Dorado */
            box-shadow: 0 4px 6px rgba(0,0,0,0.3);
        }

            .navbar-custom .nav-link {
                color: rgba(255,255,255,0.9) !important;
                font-weight: 500;
                margin-right: 15px;
                transition: color 0.3s;
            }

                .navbar-custom .nav-link:hover {
                    color: #ffd800 !important; /* Brillo al pasar el mouse */
                }

        .dropdown-menu {
            border-radius: 0;
            border-top: 3px solid #004aad;
            box-shadow: 0 5px 10px rgba(0,0,0,0.2);
        }

        .footer-custom {
            background-color: rgba(0, 0, 0, 0.9);
            color: #ccc;
            padding: 10px;
            position: fixed;
            bottom: 0;
            width: 100%;
            font-size: 0.85em;
            border-top: 2px solid #ffd800;
        }

        /* Paneles con efecto vidrio para el contenido */
        .glass-container {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 0 20px rgba(0,0,0,0.2);
            margin-top: 20px;
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-custom sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand text-white fw-bold" href="@Url.Action("Index", "Home")">
                <img src="~/images/monster_logo.jpg" alt="Monster U."
                     style="width:40px; height:auto; vertical-align:middle;"> MONSTER U.
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Archivo</a>
                        <ul class="dropdown-menu">
                            @if (ROL == "ADM")
                            {
                                <li><a class="dropdown-item" href="#">Importar Datos</a></li>
                                <li><a class="dropdown-item" href="#">Exportar Datos</a></li>
                                <li><hr class="dropdown-divider"></li>
                            }
                            <li><a class="dropdown-item text-danger" href="@Url.Action("Logout", "Access")"><i class="fas fa-sign-out-alt"></i> Cerrar Sesión</a></li>
                        </ul>
                    </li>


                    @if (ROL != "EST")
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdownReportes" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-file-alt text-danger"></i> Reportes
                            </a>
                            <ul class="dropdown-menu shadow border-0" aria-labelledby="navbarDropdownReportes">

                                <li>
                                    <a class="dropdown-item" asp-controller="Reportes" asp-action="Seguridad">
                                        <i class="fas fa-shield-alt me-2 text-warning"></i> Reporte de Seguridad
                                    </a>
                                </li>

                                @if (ROL == "ADM")
                                {
                                    <li>
                                        <a class="dropdown-item" asp-controller="Reportes" asp-action="Sistema">
                                            <i class="fas fa-database me-2 text-info"></i> Reporte del Sistema (NoSQL)
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                }

                                <li><hr class="dropdown-divider"></li>

                                <li>
                                    <a class="dropdown-item" asp-controller="Reportes" asp-action="Academico">
                                        <i class="fas fa-user-graduate me-2 text-primary"></i> Ficha Académica
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }
                    @if (Tiene("DEP") || Tiene("CUR") || Tiene("CAR") || Tiene("EST") || Tiene("USU") || Tiene("ROL"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Administración</a>
                            <ul class="dropdown-menu">

                                <li><h6 class="dropdown-header text-primary">Académico</h6></li>
                                @if (Tiene("DEP"))
                                {
                                    <li><a class="dropdown-item" href="#">Departamentos</a></li>
                                }
                                @if (Tiene("CUR"))
                                {
                                    <li><a class="dropdown-item" href="#">Cursos (Asignaturas)</a></li>
                                }
                                @if (Tiene("CAR"))
                                {
                                    <li><a class="dropdown-item" href="#">Asignar Carga</a></li>
                                }
                                @if (Tiene("EST"))
                                {
                                    <li><a class="dropdown-item" href="@Url.Action("Index", "Estudiantes")">Estudiantes (CRUD)</a></li>
                                }

                                @if (Tiene("USU") || Tiene("ROL"))
                                {
                                    <li><hr class="dropdown-divider"></li>
                                    <li><h6 class="dropdown-header text-danger">Seguridad</h6></li>
                                    @if (Tiene("USU"))
                                    {
                                        <li><a class="dropdown-item" href="@Url.Action("Index", "Usuarios")">Gestión Usuarios</a></li>
                                    }
                                    @if (Tiene("ROL"))
                                    {
                                        <li><a class="dropdown-item" href="@Url.Action("AsignarRol", "Seguridad")">Gestion de Roles</a></li>
                                    }
                                }
                            </ul>
                        </li>
                    }

                    @if (Tiene("MAT") || Tiene("NOT") || Tiene("LIS"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Procesos</a>
                            <ul class="dropdown-menu">

                                @if (Tiene("MAT") || Tiene("NOT"))
                                {
                                    <li><h6 class="dropdown-header">Estudiantes</h6></li>
                                    @if (Tiene("MAT"))
                                    {
                                        <li><a class="dropdown-item" href="#">Matrícula en Línea</a></li>
                                    }
                                    @if (Tiene("NOT"))
                                    {
                                        <li><a class="dropdown-item" href="#">Consultar Notas</a></li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                }

                                @if (Tiene("NOT") || Tiene("LIS"))
                                {
                                    <li><h6 class="dropdown-header">Docencia</h6></li>
                                    @if (Tiene("NOT"))
                                    {
                                        <li><a class="dropdown-item" href="#">Ingreso de Notas</a></li>
                                    }
                                    @if (Tiene("LIS"))
                                    {
                                        <li><a class="dropdown-item" href="#">Listas de Clase</a></li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                }

                                <li><a class="dropdown-item" href="@Url.Action("CambiarClave", "Access")">Cambiar Clave</a></li>
                            </ul>
                        </li>
                    }

                    @if (Tiene("RAC") || Tiene("RSE"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Reportes</a>
                            <ul class="dropdown-menu">
                                @if (Tiene("RAC"))
                                {
                                    <li><a class="dropdown-item" href="@Url.Action("ListaReportes", "Estudiantes")">Reporte Académico</a></li>
                                }
                                @if (Tiene("RSE"))
                                {
                                    <li><a class="dropdown-item" href="@Url.Action("ReporteSeguridad", "Usuarios")">Reporte Seguridad (Usuarios)</a></li>
                                }
                            </ul>
                        </li>
                    }

                </ul>

                <span class="navbar-text text-white">
                    @if (usuarioActual != null)
                    {
                        <div class="d-flex align-items-center">
                            <div class="me-2 text-end lh-1">
                                <div class="fw-bold" style="font-size: 0.9rem;">@usuarioActual.Nombre @usuarioActual.Apellido</div>
                                <span class="badge bg-warning text-dark" style="font-size: 0.7rem;">@ROL</span>
                            </div>
                            <i class="fas fa-user-circle fa-2x"></i>
                        </div>
                    }
                    else
                    {
                        <a href="@Url.Action("Login", "Access")" class="btn btn-sm btn-outline-light">Iniciar Sesión</a>
                    }
                </span>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="footer-custom text-center">
        &copy; 2025 Monster University - Sistema de Gestión Académica (VISS) | <i class="fas fa-code"></i> Soporte TI
    </footer>
    <script src="https://printjs-4de6.kxcdn.com/print.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>