@using Microsoft.AspNetCore.Http
@using System.Text.Json
@using Monster_University_GR2.CapaEntidad

@{
    // 1. Recuperamos la cadena JSON de la sesión
    string usuarioJson = Context.Session.GetString("UsuarioSesion");
    UsuarioSesion usuarioActual = null;

    // 2. Si hay datos, los convertimos de texto a Objeto
    if (!string.IsNullOrEmpty(usuarioJson))
    {
        usuarioActual = JsonSerializer.Deserialize<UsuarioSesion>(usuarioJson);
    }
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Monster University</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

    <link rel="stylesheet" href="~/css/estilos.css" />

    <style>
        /* Estilo tipo "Cinta de Opciones" o Strip Menu */
        .navbar-custom {
            background-color: #004aad; /* Azul Monster University */
            border-bottom: 4px solid #ffd800; /* Borde amarillo */
        }

            .navbar-custom .nav-link {
                color: white !important;
                font-weight: 500;
                margin-right: 15px;
            }

                .navbar-custom .nav-link:hover {
                    color: #ffd800 !important;
                }

        .dropdown-menu {
            border-radius: 0;
            border-top: 3px solid #004aad;
        }

        .footer-custom {
            background-color: #333;
            color: white;
            padding: 10px;
            position: fixed;
            bottom: 0;
            width: 100%;
            font-size: 0.8em;
        }

        body {
            padding-bottom: 60px;
        }
        /* Espacio para el footer */
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-custom">
        <div class="container-fluid">
            <a class="navbar-brand text-white fw-bold" href="@Url.Action("Index", "Home")">
                <i class="fas fa-university"></i> MONSTER U.
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            Archivo
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Importar Datos</a></li>
                            <li><a class="dropdown-item" href="#">Exportar Datos</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item text-danger" href="@Url.Action("Logout", "Access")">Cerrar Sesión</a></li>
                        </ul>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            Administración
                        </a>
                        <ul class="dropdown-menu">
                            <li><h6 class="dropdown-header">Académico</h6></li>
                            <li><a class="dropdown-item" href="#">Departamentos</a></li>
                            <li><a class="dropdown-item" href="#">Cursos (Asignaturas)</a></li>
                            <li><a class="dropdown-item" href="#">Asignar</a></li>
                            <li><hr class="dropdown-divider"></li>

                            <li><h6 class="dropdown-header">Seguridad</h6></li>
                            <li><a class="dropdown-item" href="@Url.Action("Index", "Usuarios")">Usuarios</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("AsignarRol", "Seguridad")">Asignar Perfil</a></li>
                        </ul>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            Procesos
                        </a>
                        <ul class="dropdown-menu">
                            <li><h6 class="dropdown-header">Académico</h6></li>
                            <li><a class="dropdown-item" href="#">Matrícula</a></li>
                            <li><hr class="dropdown-divider"></li>

                            <li><h6 class="dropdown-header">Seguridad</h6></li>
                            <li><a class="dropdown-item" href="@Url.Action("AsignarRol", "Seguridad")">Asignar Perfil</a></li>
                            <li><a class="dropdown-item" href="@Url.Action("CambiarClave", "Access")">Cambiar Clave</a></li>
                        </ul>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            Reportes
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Reporte Académico</a></li>
                            <li><a class="dropdown-item" href="#">Reporte Seguridad</a></li>
                        </ul>
                    </li>

                </ul>

                <span class="navbar-text text-white">
                    @if (usuarioActual != null)
                    {
                        // AQUI MOSTRAMOS SOLO LO QUE QUEREMOS VER
                        <i class="fas fa-user-circle"></i>
                        <strong>@usuarioActual.Nombre @usuarioActual.Apellido</strong>
                        <span class="badge bg-warning text-dark ms-2">@usuarioActual.RolCodigo</span>
                    }
                    else
                    {
                        // Por si acaso se pierde la sesión visualmente
                        <a href="@Url.Action("Login", "Access")" class="text-white text-decoration-none">Iniciar Sesión</a>
                    }
                </span>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="footer-custom text-center">
        &copy; 2025 Monster University - Sistema de Gestión Académica (VISS)
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>