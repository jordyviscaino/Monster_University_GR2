@model List<Monster_University_GR2.CapaEntidad.UsuarioListViewModel>
@{
    ViewBag.Title = "Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Listado de Usuarios</h5>
        <a class="btn btn-primary" href="@Url.Action("Crear", "UsuarioCrud")"><i class="fas fa-plus me-2"></i> Nuevo Usuario</a>
    </div>
    <div class="card-body p-0">
        <table class="table table-striped mb-0">
            <thead class="table-light">
                <tr>
                    <th>Cédula</th>
                    <th>Nombre</th>
                    <th>Email</th>
                    <th>Rol</th>
                    <th>Estado</th>
                    <th class="text-end">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var u in Model)
                    {
                        <tr>
                            <td>@u.Cedula</td>
                            <td>@u.NombreCompleto</td>
                            <td>@u.Email</td>
                            <td>@u.Rol</td>
                            <td>@u.Estado</td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-secondary me-1" href="@Url.Action("Editar", "UsuarioCrud", new { id = u.Cedula })"><i class="fas fa-edit"></i></a>
                                <a class="btn btn-sm btn-danger" href="@Url.Action("Eliminar", "UsuarioCrud", new { id = u.Cedula })" onclick="return confirm('Confirma eliminación?');"><i class="fas fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted">No hay usuarios registrados.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>